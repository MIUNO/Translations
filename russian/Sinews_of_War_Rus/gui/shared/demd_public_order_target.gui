					autoresize = yes
					max_width = 400
                }
                text_multi = {
                    layoutpolicy_horizontal = expanding
                    raw_text = "От [development|E]: [Province.GetCounty.GetTitle.MakeScope.ScriptValue('public_order_from_development')|%0]"
